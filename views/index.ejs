<% include partials/header.ejs %>
<div class="container">
	<% if(liveGames.length) { %>
	<section class="dark-section">
		<div class="container">
			<h2>Live Games</h2>
			<% liveGames.forEach(game => { %>
				<a class="container-game" href="game/<%= game.gameId %>">
					<div class="game-team game-team-1">
						<p><%= game.team1.shortName %></p>
					</div>
					<div class="game-score">
						<div>
							<p><%= game.team1Score %></p>
						</div>
						<div>
							<p> - </p>
						</div>
						<div>
							<p><%= game.team2Score %></p>
						</div>
					</div>
					<div class="game-team game-team-2">
						<p><%= game.team2.shortName %></p>
					</div>
				</a>
			<% }) %>
		</div>
	</section>
	<%} else { %>
	<section class="dark-section">
		<div class="container">
			<h2>Live Games</h2>
			<p>There are no live games at the moment</p>
		</div>
	</section>
	<% } %>
	<section>
		<h2>Updates</h2>
		<p>There are no updates at the moment</p>
	</section>
</div>
<% include partials/footer.ejs %>